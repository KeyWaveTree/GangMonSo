<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@color/cutout"
    tools:ignore=".Art_two"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        android:background="#ffffff"
        android:textColor="#000000"
        app:menu="@menu/menu"
        android:layout_gravity="start"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:isScrollContainer="false"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:navigationIcon="@drawable/menu"/>

    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="330dp"
            android:layout_height="300dp"
            android:id="@+id/residents_hall_image"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/residents_hall"
            android:layout_marginStart="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/residents_hall_title"
            android:text="@string/residents_hall"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_marginTop="405dp"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/residents_hall_subTitle"
            android:layout_marginLeft="60dp"
            android:text="@string/residents_hall_sub"
            android:textColor="#000000"
            android:textSize="15sp"
            android:ems="15"
            android:layout_marginTop="445dp"
            android:layout_marginStart="60dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="483dp"
            android:background="#808080" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:textColor="#000000"
            android:text="@string/text"
            android:textSize="20dp"
            android:layout_marginTop="495dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/residents_hall_contents"
            android:text="@string/residents_hall_contents"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_marginTop="530dp"
            android:layout_marginLeft="25dp"
            android:ems="19"
            android:layout_marginStart="25dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="605dp"
            android:background="#808080" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/art_center_address"
            android:textColor="#000000"
            android:text="@string/residents_hall_address"
            android:textSize="15sp"
            android:layout_marginTop="620dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:id="@+id/pin"
            android:background="@drawable/location"
            android:layout_marginTop="617dp"
            android:layout_marginLeft="3dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="650dp"
            android:background="#808080" />

    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>